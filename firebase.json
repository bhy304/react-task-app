{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": ["npm run build"],
    "env": [
      "VITE_API_KEY",
      "VITE_AUTH_DOMAIN",
      "VITE_PROJECT_ID",
      "VITE_STORAGE_BUCKET",
      "VITE_MESSAGING_SENDER_ID",
      "VITE_APP_ID"
    ]
  }
}
